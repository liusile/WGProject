@using Domain.Models.HeadStage;
@model IQueryable<Employee> 
<style type="text/css">
    p {
        line-height: 2;
    }
</style> 
@{
    ViewBag.Title = "AboutUs";
}

<div class="banner_1">
    <img src="~/Content/Img/banner_1.jpg" style="width:100%;" />
</div>
<div class="container">
    <div class="single"><h2>关于公司</h2> </div>
    <h3><img src="~/Content/Img/tagLine.jpg" style="height:20px;padding-right:5px">公司简介</h3>
    <p>
       @ViewBag.Generalization
    </p>
    <p>&nbsp;</p>
    <h3><img src="~/Content/Img/tagLine.jpg" style="height:20px;padding-right:5px">企业文化</h3>
