    <p>&nbsp;</p>
    <h3><img src="~/Content/Img/tagLine.jpg" style="height:20px;padding-right:5px">员工精采</h3>
    <div class="container" style="margin-left:-15px">
        <div>
            <div>
                @foreach (var row in Model)
                {
                    <div class="col-sm-3 recruit">
