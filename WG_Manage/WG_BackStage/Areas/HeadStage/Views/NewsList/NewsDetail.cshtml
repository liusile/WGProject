@using Domain.Models.HeadStage;
@model News
<style type="text/css">
    .back {
       color:black;
      text-decoration:none;
    }
</style> 
@{
    ViewBag.Title = "NewsDetail";
}

<h2 class="text-center" style="margin:50px 0">@Model.Title</h2>

<!--新闻详情  开始-->
