    @Html.Raw(@Model.Content)
    <!--新闻详情  end-->
    <p class="text-right" style="margin-right:20px"><img src="~/Content/Img/back.png" width="20px" />@Html.ActionLink("返回", "NewsList", null, new { @class = "back" })</p>
</div>
