@using Domain.Models.HeadStage;
@using Common;

@model PageInfo<Employee>
@{
    var viewName = "EmployeeList";
    var rowStyle = "odd gradeX";
}
<div class="row">

    <div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
        <div class="widget am-cf">
            <div class="widget-head am-cf">
                <div class="widget-title am-fl">员工精彩</div>
                <div class="widget-function am-fr">
                    <a href="javascript:;" class="am-icon-cog"></a>
                </div>
            </div>
            <div class="widget-body  am-fr">
                <div class="am-u-sm-12 am-u-md-6 am-u-lg-6">
                    <div class="am-form-group">
                        <div class="am-btn-toolbar">
                            <div class="am-btn-group am-btn-group-xs">
                                  <button type="button" class="am-btn am-btn-default am-btn-success" onclick="location.href='@Url.Action("EmployeeEdit")'"><span class="am-icon-plus"></span> 新增</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="am-u-sm-12 am-u-md-12 am-u-lg-3">
                    <div class="am-input-group am-input-group-sm tpl-form-border-form cl-p">
                        <input class="am-form-field " type="text" id="txt_search" placeholder="请输入员工名称...">
                        <span class="am-input-group-btn">
                            <button class="am-btn  am-btn-default am-btn-success tpl-table-list-field am-icon-search" onclick="Search()" type="button"></button>
                        </span>
                    </div>
                </div>
                <div class="am-u-sm-12">
                    <table class="am-table am-table-compact am-table-striped tpl-table-black " id="example-r" width="100%">
                        <thead>
                            <tr>
                                <th>姓名</th>
                                <th>图片地址</th>
                                <th>描述</th>
                                <th>状态 </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model.List)
                            {
                                <tr class=@rowStyle>
                                    <td>@row.Name</td>
                                    <td>@row.ImgUrl</td>
                                    <td>@row.Describe</td>
                                    @if (row.isValid)
                                    {
                                        <td>已启用</td>
                                    }
                                    else
                                    {
                                        <td>未启用</td>
                                    }
                                    <td>
                                        <div class="tpl-table-black-operation">
                                           
                                            @if (row.isValid)
                                            {
                                                <a href=@Url.Action("EmployeeUnEnable", new { id=row.ID}) class="tpl-table-black-operation-del">
                                                    <i class="am-icon-trash"></i> 取消
                                                </a>
                                            }
                                            else
                                            {
                                                <a href=@Url.Action("EmployeeEnable", new { id=row.ID}) class="tpl-table-black-operation-del">
                                                    <i class="am-icon-trash"></i> 启用
                                                </a>
                                                <a href=@Url.Action("EmployeeEdit", new { id=row.ID})>
                                                    <i class="am-icon-pencil"></i> 修改
                                                </a>
                                                <a href=@Url.Action("EmployeeDel", new { id=row.ID}) class="tpl-table-black-operation-del">
                                                    <i class="am-icon-trash"></i> 删除
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                                rowStyle = "even gradeC";
                            }
                        </tbody>
                    </table>
                </div>
                <div class="am-u-lg-12 am-cf">
                    <div class="am-fr">
                        <ul class="am-pagination tpl-pagination">
                            <li>
                                <a href=@Url.Action(viewName, new { p = 1,searchFild=ViewBag.searchFild })>«</a>
                            </li>
                            @for (int i = Model.Index - 4; i < Model.Index; i++)
                            {
                                if (i > 0)
                                {
                                    <li><a href=@Url.Action(viewName, new { p = i,searchFild=ViewBag.searchFild  })>@i</a></li>
                                }
                            }
                            <li class="am-active"><a href="#">@Model.Index</a></li>
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (Model.Index + i <= Math.Ceiling((decimal)Model.Count / Model.PageSize))
                                {
                                    <li><a href=@Url.Action(viewName, new { p = Model.Index + i,searchFild=ViewBag.searchFild  })>@(@Model.Index + @i)</a></li>
                                }
                            }
                            <li>
                                <a href=@Url.Action(viewName, new { p = Math.Ceiling((decimal)Model.Count / Model.PageSize),searchFild=ViewBag.searchFild  })>»</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
      $(function(){
          if("@TempData["Msg"]"!="")
              layer.msg("@TempData["Msg"]");
       });
</script>
@section scripts{
    function Search(){

    var value = $("#txt_search").val();

    location.href='@Url.Action("EmployeeList")'+'?searchFild='+value;

    }
}