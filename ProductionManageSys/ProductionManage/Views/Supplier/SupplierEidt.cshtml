@using Domain.Model;
@model Supplier
<div class="row">
    <div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
        <div class="widget am-cf">
            <div class="widget-head am-cf">
                <div class="widget-title am-fl">编辑供应商</div>
                <div class="widget-function am-fr">
                    <a href="javascript:;" class="am-icon-cog"></a>
                </div>
            </div>
            <div class="widget-body am-fr" >
                @using (Html.BeginForm("Save", "Supplier", FormMethod.Post, new { @class = "am-form tpl-form-line-form" }))
                {
                    @Html.HiddenFor(o => o.ID, new { Value = Model?.ID })
                    <div class="am-form-group">
                        <label for="user-name" class="am-u-sm-3 am-form-label">公司名称</label>
                        <div class="am-u-sm-9">
                            @Html.TextBoxFor(o => o.CorpName, new { @class = "tpl-form-input", placeholder = "请输入公司名称" })
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="user-phone" class="am-u-sm-3 am-form-label">评分</label>
                        <div class="am-u-sm-9">
                         
                            @Html.DropDownListFor(t => t.Level,
                                new List<SelectListItem> {
                                     new SelectListItem { Text = "请选择", Value = "" },
                                    new SelectListItem { Text = "高", Value = "1" },
                                    new SelectListItem { Text = "中", Value = "2" },
                                    new SelectListItem { Text = "低", Value = "3" }
                                },
                                new { style= "background:#4b5357" })      
                        </div>
                    </div>
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">联系人</label>
                            <div class="am-u-sm-9">
                                @Html.TextBoxFor(o => o.People, new { @class = "tpl-form-input", placeholder = "请输入联系人" })
                            </div>
                        </div>
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">电话</label>
                            <div class="am-u-sm-9">
                                @Html.TextBoxFor(o => o.Phone, new { @class = "tpl-form-input", placeholder = "请输入电话" })
                            </div>
                        </div>
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">邮箱</label>
                            <div class="am-u-sm-9">
                                @Html.TextBoxFor(o => o.Email, new { @class = "tpl-form-input", placeholder = "请输入邮箱" })
                            </div>
                        </div>
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">地址</label>
                            <div class="am-u-sm-9">
                                @Html.TextBoxFor(o => o.Address, new { @class = "tpl-form-input", placeholder = "请输入地址" })
                            </div>
                        </div>
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">备注</label>
                            <div class="am-u-sm-9">
                                @Html.TextBoxFor(o => o.Remark, new { @class = "tpl-form-input", placeholder = "请输入备注" })
                            </div>
                        </div>
                        <div class="am-form-group">
                            <div class="am-u-sm-9 am-u-sm-push-3">
                                <button type="submit" class="am-btn am-btn-primary tpl-btn-bg-color-success ">提交</button>
                                <button type="button" class="am-btn am-btn-primary tpl-btn-bg-color-success " onclick="location.href='@Url.Action("Index")'">返回</button>
                            </div>
                        </div>
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
      $(function(){
          if("@ViewBag.Msg"!="")
              layer.msg("@ViewBag.Msg");
       });
</script>
<script src="~/scripts/Upload.js"></script>

